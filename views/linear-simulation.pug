                br
                br
                button#empty.buttons(style='background-color:#476b6b;color:white') Empty
                br
                br
            div.tabs
                div#cdv.codeDiv
                    p #{j}
                    p #{p}
                    p #{cs}
                    p #{cp}
                .messageBoard
                    div
                        b#tf Target:&nbsp&nbsp
                        input#target.textArea(type='Number')
                        br
                        br
                        br
                    span#tip1(style="user-select:none;position:relative;top:-15px") Press P to pause/play
                    br
                    span#tip2(style="user-select:none;position:relative;top:-15px") Press N when paused to advance the simulation
                    br
                    span#tip3(style="user-select:none;position:relative;top:-15px") You can use the Control Panel for the same
                    br
                    p#info.info
        include ./footer.pug
