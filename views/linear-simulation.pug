                div#1.eleBox(style='position:relative;top:8px')
                    p#index 2
                    div.ele
                        p
                    div.pointer
                        p null
                div#1.eleBox(style='position:relative;top:12px')
                    p#index 3
                    div.ele
                        p
                    div.pointer
                        p null
                div#1.eleBox(style='position:relative;top:16px')
                    p#index 4
                    div.ele
                        p
                    div.pointer
                        p null
                div#1.eleBox(style='position:relative;top:20px')
                    p#index 5
                    div.ele
                        p
                    div.pointer
                        p null
                div#1.eleBox(style='position:relative;top:24px')
                    p#index 6
                    div.ele
                        p
                    div.pointer
                        p null
                div#1.eleBox(style='position:relative;top:28px')
                    p#index 7
