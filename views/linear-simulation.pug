            div.editBox#eb
                div#add.editBoxHalf
                    h3 Add Elements
                    input#AE.textArea(type='number')
                    br
                    br
                    button#addEle.buttons(style='background-color:#c6ff1a') Add
                    br
                    br
                    button#fill.buttons(style='background-color:#c6ff1a') Fill
                div#remove.editBoxHalf
                    h3 Delete Elements
                    input#DE.textArea(type='number')
                    br
                    br
                    button#dlt.buttons(style='background-color:#ffa366') Delete
                    br
                    br
                    button#rAll.buttons(style='background-color:#ffa366') Remove All
            div.controlPanel#contP
                h3 Control Panel
                button#play.buttons(style='background-color:#476b6b;color:white') Play
                br
                br
                button#pause.buttons(style='background-color:#476b6b;color:white') Pause
                br
                br
                button#step.buttons(style='background-color:#476b6b;color:white') Next Step
                br
                br
                button#sort.buttons(style='background-color:#476b6b;color:white') Sort
                br
                br
